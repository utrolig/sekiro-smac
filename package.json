{
  "name": "custom-electron",
  "version": "1.0.0",
  "main": "dist/main.js",
  "license": "MIT",
  "scripts": {
    "build-all": "webpack --config config/webpack.combined.ts --progress",
    "build-main": "webpack --config config/webpack.main.ts --progress",
    "build-renderer": "webpack --config config/webpack.renderer.ts --progress",
    "electron": "nodemon --watch dist/main.js --exec \"electron .\"",
    "start": "run-p watch-all electron",
    "tsc-init": "tsc --init",
    "watch-all": "yarn build-all --watch"
  },
  "devDependencies": {
    "@babel/core": "^7.4.0",
    "@babel/preset-env": "^7.4.2",
    "@babel/preset-typescript": "^7.3.3",
    "@types/webpack": "^4.4.26",
    "@types/webpack-node-externals": "^1.6.3",
    "babel-loader": "^8.0.5",
    "electron": "^4.1.2",
    "electron-debug": "^2.1.0",
    "nodemon": "^1.18.10",
    "npm-run-all": "^4.1.5",
    "ts-node": "^8.0.3",
    "typescript": "^3.3.4000",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.3.0",
    "webpack-node-externals": "^1.7.2"
  }
}
